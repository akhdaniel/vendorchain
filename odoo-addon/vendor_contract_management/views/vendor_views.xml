<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vendor Tree View -->
    <record id="view_vendor_contract_vendor_tree" model="ir.ui.view">
        <field name="name">vendor.contract.vendor.tree</field>
        <field name="model">vendor.contract.vendor</field>
        <field name="arch" type="xml">
            <list string="Vendors">
                <field name="vendor_id"/>
                <field name="name"/>
                <field name="vendor_type"/>
                <field name="contact_email"/>
                <field name="contact_phone"/>
                <field name="status" widget="badge"/>
                <field name="contract_count"/>
                <field name="total_contract_value" widget="monetary"/>
                <field name="blockchain_synced" widget="boolean_toggle" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Vendor Form View -->
    <record id="view_vendor_contract_vendor_form" model="ir.ui.view">
        <field name="name">vendor.contract.vendor.form</field>
        <field name="model">vendor.contract.vendor</field>
        <field name="arch" type="xml">
            <form string="Vendor">
                <header>
                    <button name="action_activate" type="object" string="Activate" class="btn-success" invisible="status == 'active'"/>
                    <button name="action_suspend" type="object" string="Suspend" class="btn-warning" invisible="status in ['suspended', 'blacklisted']"/>
                    <button name="action_blacklist" type="object" string="Blacklist" class="btn-danger" invisible="status == 'blacklisted'" confirm="Are you sure you want to blacklist this vendor?"/>
                    <button name="action_sync_blockchain" type="object" string="Sync to Blockchain" class="btn-primary" icon="fa-chain"/>
                    <field name="status" widget="statusbar" statusbar_visible="active,suspended"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_contracts" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="contract_count" widget="statinfo" string="Contracts"/>
                        </button>
                        <button name="%(action_vendor_contract)d" type="action" class="oe_stat_button" icon="fa-bar-chart" context="{'search_default_vendor_id': id}">
                            <field name="active_contracts" widget="statinfo" string="Active"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Blacklisted" bg_color="bg-danger" invisible="status != 'blacklisted'"/>
                    <widget name="web_ribbon" title="Suspended" bg_color="bg-warning" invisible="status != 'suspended'"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Vendor Name"/>
                        </h1>
                        <label for="vendor_id"/>
                        <h2>
                            <field name="vendor_id" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group name="vendor_info" string="Vendor Information">
                            <field name="vendor_type"/>
                            <field name="registration_number"/>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="contact_info" string="Contact Information">
                            <field name="contact_email" widget="email"/>
                            <field name="contact_phone" widget="phone"/>
                            <field name="address" widget="text"/>
                        </group>
                    </group>
                    <group>
                        <group name="blockchain_info" string="Blockchain Information">
                            <field name="blockchain_identity" readonly="1" help="Unique vendor address on the blockchain (like a wallet address)"/>
                            <field name="blockchain_tx_id" readonly="1" help="Transaction ID from vendor registration"/>
                            <field name="blockchain_synced" readonly="1"/>
                        </group>
                        <group name="statistics" string="Statistics">
                            <field name="total_contract_value" widget="monetary"/>
                            <field name="active_contracts"/>
                            <field name="expired_contracts"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contracts" name="contracts">
                            <field name="contract_ids" readonly="1">
                                <list>
                                    <field name="contract_id"/>
                                    <field name="contract_type"/>
                                    <field name="state" widget="badge"/>
                                    <field name="total_value" widget="monetary"/>
                                    <field name="expiry_date"/>
                                    <field name="days_to_expire"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vendor Search View -->
    <record id="view_vendor_contract_vendor_search" model="ir.ui.view">
        <field name="name">vendor.contract.vendor.search</field>
        <field name="model">vendor.contract.vendor</field>
        <field name="arch" type="xml">
            <search string="Search Vendors">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="contact_email"/>
                <field name="registration_number"/>
                <separator/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Suspended" name="suspended" domain="[('status', '=', 'suspended')]"/>
                <filter string="Blacklisted" name="blacklisted" domain="[('status', '=', 'blacklisted')]"/>
                <separator/>
                <filter string="Synced to Blockchain" name="blockchain_synced" domain="[('blockchain_synced', '=', True)]"/>
                <filter string="Not Synced" name="not_synced" domain="[('blockchain_synced', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'vendor_type'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vendor Kanban View -->
    <record id="view_vendor_contract_vendor_kanban" model="ir.ui.view">
        <field name="name">vendor.contract.vendor.kanban</field>
        <field name="model">vendor.contract.vendor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="vendor_type"/>
                <field name="status"/>
                <field name="contract_count"/>
                <field name="total_contract_value"/>
                <field name="blockchain_synced"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="vendor_id"/>
                                    </small>
                                </div>
                                <field name="status" widget="label_selection" options="{'classes': {'active': 'success', 'suspended': 'warning', 'blacklisted': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-muted">
                                    <field name="vendor_type"/>
                                </div>
                                <div>
                                    <strong>Contracts: </strong><field name="contract_count"/>
                                </div>
                                <div>
                                    <strong>Total Value: </strong><field name="total_contract_value" widget="monetary"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="blockchain_synced" widget="boolean" />
                                    <span invisible="not blockchain_synced">Blockchain Synced</span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vendor Action - All Vendors -->
    <record id="action_vendor_contract_vendor" model="ir.actions.act_window">
        <field name="name">All Vendors</field>
        <field name="res_model">vendor.contract.vendor</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_vendor_contract_vendor_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vendor
            </p>
            <p>
                Manage vendors for blockchain-based contract management.
                Each vendor can have multiple contracts with workflow tracking.
            </p>
        </field>
    </record>

    <!-- Vendor Action - Active Vendors -->
    <record id="action_vendor_contract_vendor_active" model="ir.actions.act_window">
        <field name="name">Active Vendors</field>
        <field name="res_model">vendor.contract.vendor</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_vendor_contract_vendor_search"/>
        <field name="domain">[('status', '=', 'active')]</field>
        <field name="context">{'search_default_active': 1, 'default_status': 'active'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No active vendors
            </p>
            <p>
                Active vendors are eligible for new contracts.
            </p>
        </field>
    </record>
</odoo>