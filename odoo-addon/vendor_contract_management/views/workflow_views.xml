<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Workflow Log Tree View -->
    <record id="view_vendor_contract_workflow_log_tree" model="ir.ui.view">
        <field name="name">vendor.contract.workflow.log.tree</field>
        <field name="model">vendor.contract.workflow.log</field>
        <field name="arch" type="xml">
            <list string="Workflow Logs" create="false" edit="false" delete="false">
                <field name="performed_at"/>
                <field name="contract_id"/>
                <field name="action"/>
                <field name="from_state" widget="badge"/>
                <field name="to_state" widget="badge"/>
                <field name="performed_by"/>
                <field name="notes"/>
                <field name="blockchain_tx_id"/>
            </list>
        </field>
    </record>

    <!-- Workflow Log Action -->
    <record id="action_vendor_contract_workflow_log" model="ir.actions.act_window">
        <field name="name">Workflow Logs</field>
        <field name="res_model">vendor.contract.workflow.log</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No workflow logs yet
            </p>
        </field>
    </record>

    <!-- Test API Connection Action -->
    <record id="action_test_api_connection" model="ir.actions.server">
        <field name="name">Test API Connection</field>
        <field name="model_id" ref="model_vendor_contract_api"/>
        <field name="binding_model_id" eval="False"/>
        <field name="state">code</field>
        <field name="code">
action = model.test_connection()
        </field>
    </record>
</odoo>